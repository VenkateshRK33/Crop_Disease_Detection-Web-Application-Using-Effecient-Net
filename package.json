{
  "name": "farmer-chatbot",
  "version": "2.0.0",
  "description": "AI-powered chatbot for plant disease diagnosis and treatment advice with MongoDB",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "start:backend": "node backend/server.js",
    "start:ml": "python api_service.py",
    "start:frontend": "cd frontend-react && npm start",
    "dev": "concurrently \"npm run start:ml\" \"npm run start:backend\" \"npm run start:frontend\" --names \"ML,Backend,Frontend\" --prefix-colors \"blue,green,yellow\"",
    "dev:backend": "nodemon backend/server.js",
    "start:old": "node chatbot-server.js",
    "test:backend": "jest backend/server.test.js --forceExit",
    "test:integration": "jest backend/integration.test.js --forceExit",
    "test:e2e": "jest e2e/ --forceExit --runInBand",
    "test:all": "npm run test:backend && npm run test:integration && cd frontend-react && npm test -- --watchAll=false",
    "build": "cd frontend-react && npm run build",
    "build:analyze": "cd frontend-react && npm run build -- --stats && npx webpack-bundle-analyzer build/bundle-stats.json",
    "deploy:setup": "npm install && cd frontend-react && npm install && cd .. && pip install -r requirements_ml.txt",
    "deploy:build": "npm run build",
    "deploy:pm2": "pm2 start ecosystem.config.js --env production",
    "deploy:pm2:dev": "pm2 start ecosystem.config.js",
    "deploy:stop": "pm2 stop all",
    "deploy:restart": "pm2 restart all",
    "deploy:logs": "pm2 logs",
    "deploy:status": "pm2 status",
    "deploy:monitor": "pm2 monit",
    "production": "NODE_ENV=production npm start"
  },
  "keywords": [
    "agriculture",
    "plant-disease",
    "chatbot",
    "llm",
    "ollama",
    "mongodb",
    "mern"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "mongoose": "^8.19.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^9.2.1",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testTimeout": 30000
  }
}
